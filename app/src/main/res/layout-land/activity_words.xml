<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_gravity="center"
        tools:context=".WordsActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="22dp"
            android:text="Fill in the words to complete the story."
            android:textSize="30sp" />

        <TextView
            android:id="@+id/x_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="x words left"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/word_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="okClicked"
                android:text="Ok"
                android:layout_weight="5"/>
        </LinearLayout>

        <TextView
            android:id="@+id/word_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please type a word"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>